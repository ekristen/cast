{
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "matchUpdateTypes": [
                "pin",
                "digest"
            ],
            "automerge": true,
            "labels": [
                "patch"
            ]
        },
        {
            "groupName": "golang",
            "groupSlug": "golang",
            "matchPackageNames": [
                "/^golang.*/"
            ]
        },
        {
            "matchFileNames": [
                ".github/workflows/*.yml"
            ],
            "matchDepTypes": [
                "action"
            ],
            "matchCurrentVersion": "!/^0/",
            "automerge": true,
            "labels": [
                "bot/skip-changelog"
            ]
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/.*.go$/"
            ],
            "matchStrings": [
                "\"(?<currentValue>.*)\" // renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s"
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/^.github/workflows/.*/"
            ],
            "matchStrings": [
                "go-version: (?<currentValue>.*?).x\n"
            ],
            "depNameTemplate": "golang",
            "datasourceTemplate": "docker"
        }
    ],
    "vulnerabilityAlerts": {
        "labels": [
            "security"
        ],
        "automerge": true,
        "assignees": [
            "@ekristen"
        ]
    },
    "postUpdateOptions": [
        "gomodUpdateImportPaths"
    ]
}
